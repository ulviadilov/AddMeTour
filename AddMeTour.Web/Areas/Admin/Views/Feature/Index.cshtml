@model List<FeatureViewModel>
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row y-gap-20 justify-between items-end pb-60 lg:pb-40 md:pb-32">
                <div class="col-auto">

                    <h1 class="text-30 lh-14 fw-600">All Features</h1>

                </div>

                <div class="col-auto">


                    <a asp-action="create" asp-controller="feature" class="button h-50 px-24 -dark-1 bg-blue-1 text-white">
                        Add Features <div class="icon-arrow-top-right ml-15"></div>
                    </a>


                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (FeatureViewModel featureVM in Model)
                    {
                    <td>@featureVM.Title</td>
                    <td>@featureVM.Description</td>
                    <td>
                        <a asp-action="update" asp-controller="feature" asp-route-id="@featureVM.Id" class="button -md -dark-1 bg-blue-1 text-white-1">Update</a>
                        <a asp-action="safedelete" asp-controller="feature" asp-route-id="@featureVM.Id" class="button -md -dark-1 bg-yellow-1 text-dark-1">Delete</a>
                    </td>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>