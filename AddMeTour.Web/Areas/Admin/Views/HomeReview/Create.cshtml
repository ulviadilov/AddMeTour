@model HomeReviewAddViewModel

<div class="tabs__content pt-30 js-tabs-content">
    <div class="tabs__pane -tab-item-1 is-tab-el-active">
        <form method="post" enctype="multipart/form-data" asp-action="create" asp-controller="homereview">
            <div class="col-xl-10">
                <div class="text-18 fw-500 mb-10">Create Review</div>
                <div class="row x-gap-20 y-gap-20">
                    <div class="col-12">
                        <div class="form-input ">
                            <input asp-for="Title" type="text" required>
                            <label asp-for="Title" class="lh-1 text-16 text-light-1">Feature title</label>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">

                        <div class="form-input ">
                            <textarea asp-for="Description" required rows="5"></textarea>
                            <label asp-for="Description" class="lh-1 text-16 text-light-1">Description</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-12">

                        <div class="form-input ">
                            <input asp-for="Username" type="text" required>
                            <label asp-for="Username" class="lh-1 text-16 text-light-1">Username</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-12">

                        <div class="form-input ">
                            <input asp-for="UserCountry" type="text" required>
                            <label asp-for="UserCountry" class="lh-1 text-16 text-light-1">User Country</label>
                            <span asp-validation-for="UserCountry" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-switch d-flex items-center">
                        <div class="text-13 lh-1 text-dark-1 ml-10">Publish</div>
                        <div class="switch">
                            <input type="checkbox" asp-for="IsActive">
                            <span class="switch__slider"></span>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-3 ">
                    <label asp-for="AvatarImageFile" class="form-label">Avatar Image</label>
                    <input asp-for="AvatarImageFile" class="form-control ">
                    <span asp-validation-for="AvatarImageFile" class="text-danger"></span>
                </div>

                <div class="border-top-light mt-30 mb-30"></div>

            </div>


            <div class="d-inline-block pt-30">

                <div class="text-center">
                    <button type="submit" class="button h-50 px-24 -dark-1 bg-blue-1 text-white"> Add Review</button>
                </div>

            </div>
        </form>
    </div>
</div>