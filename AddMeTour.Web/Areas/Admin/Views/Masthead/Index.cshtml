@model List<MastheadViewModel>
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row y-gap-20 justify-between items-end pb-60 lg:pb-40 md:pb-32">
                <div class="d-flex justify-between">

                    <h1 class="text-30 lh-14 fw-600">Masthead</h1>
                    @*<div class="d-flex flex-row">
                        <a asp-action="create" asp-controller="masthead" class="button h-50 px-24 -dark-1 bg-blue-1 text-white">
                            Add Masthead <div class="icon-arrow-top-right ml-15"></div>
                        </a>
                    </div>*@
                </div>

            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Big Image</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (MastheadViewModel mastheadVM in Model)
                {
                    <tr>
                        <td>@(mastheadVM.TitleYellow+ " " +mastheadVM.TitleWhite)</td>
                        <td>@mastheadVM.Description</td>
                        <td>
                            <img src="~/assets/img/masthead/2/@mastheadVM.BigImageUrl" style="height:200px; width:auto">
                        </td>
                        <td>
                            <a asp-area="admin" asp-action="update" asp-controller="masthead" asp-route-mastheadId="@mastheadVM.Id" class="button -md -dark-1 bg-blue-1 text-white-1">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>