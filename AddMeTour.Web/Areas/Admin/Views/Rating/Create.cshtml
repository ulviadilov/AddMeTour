@model RatingAddViewModel

<div class="tabs__content pt-30 js-tabs-content">
    <div class="tabs__pane -tab-item-1 is-tab-el-active">
        <form method="post" enctype="multipart/form-data" asp-action="create" asp-controller="rating">
            <div class="col-xl-10">
                <div class="text-18 fw-500 mb-10">Create Rating</div>
                <div class="row x-gap-20 y-gap-20">
                    <div class="col-12">

                        <div class="form-input ">
                            <input asp-for="Title1" type="text" required>
                            <label asp-for="Title1" class="lh-1 text-16 text-light-1">Title-1</label>
                            <span asp-validation-for="Title1" class="text-danger"></span>
                        </div>

                    </div><div class="col-12">

                        <div class="form-input ">
                            <input asp-for="Title2" type="text" required>
                            <label asp-for="Title2" class="lh-1 text-16 text-light-1">Title-2</label>
                            <span asp-validation-for="Title2" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-12">

                        <div class="form-input ">
                            <input asp-for="Description" type="text" required>
                            <label asp-for="Description" class="lh-1 text-16 text-light-1">Description</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="col-12">
                        <div class="form-input ">
                            <input asp-for="OverallRating" type="text" required>
                            <label asp-for="OverallRating" class="lh-1 text-16 text-light-1">Overall Rating</label>
                            <span asp-validation-for="OverallRating" class="text-danger"></span>
                        </div>

                    </div><div class="col-12">
                        <div class="form-input ">
                            <input asp-for="TotalGuestCount" type="text" required>
                            <label asp-for="TotalGuestCount" class="lh-1 text-16 text-light-1">Total Guest Count</label>
                            <span asp-validation-for="TotalGuestCount" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-switch d-flex items-center">
                        <div class="text-13 lh-1 text-dark-1 ml-10">Publish</div>
                        <div class="switch">
                            <input type="checkbox" asp-for="IsActice">
                            <span class="switch__slider"></span>
                        </div>
                    </div>
                </div>

                <div class="border-top-light mt-30 mb-30"></div>

            </div>

            <div class="d-inline-block pt-30">

                <div class="text-center">
                    <button type="submit" class="button h-50 px-24 -dark-1 bg-blue-1 text-white"> Add Rating</button>
                </div>

            </div>
        </form>
    </div>
</div>