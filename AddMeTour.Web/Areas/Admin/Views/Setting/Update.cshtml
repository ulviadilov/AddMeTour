@using AddMeTour.Entity.ViewModels.Setting;
@model SettingUpdateViewModel

<div class="tabs__content pt-30 js-tabs-content">
    <div class="tabs__pane -tab-item-1 is-tab-el-active">
        <form method="post" enctype="multipart/form-data" asp-action="update" asp-controller="setting">
            <div class="col-xl-10">
                <div class="text-18 fw-500 mb-10">Update Setting</div>
                <div class="row x-gap-20 y-gap-20">
                    <div class="col-12">

                        <div class="form-input ">
                            <input asp-for="Value" type="text" required>
                            <label asp-for="Value" class="lh-1 text-16 text-light-1">Value</label>
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <input type="hidden" asp-for="Id" />

                <div class="border-top-light mt-30 mb-30"></div>

            </div>

            <div class="d-inline-block pt-30">

                <div class="text-center">
                    <button type="submit" class="button h-50 px-24 -dark-1 bg-blue-1 text-white"> Update Setting</button>
                </div>

            </div>
        </form>
    </div>
</div>