@model IndexVM
@{
    ViewBag.Categories = Model.Categories;
    ViewBag.Countries = Model.Countries;
    ViewData["Title"] = "Home Page";
    int featureDelayCounter = 1;
    int tourDelatCounter = 1;
    byte galleryCounter = 0;
}

<section data-anim-wrap class="masthead -type-2 js-mouse-move-container">
    <div class="masthead__bg bg-dark-3">
        <img src="~/assets/img/masthead/2/bg.png" alt="image">
    </div>

    <div class="container">
        <div data-anim-child="fade delay-1" class="masthead__tabs">
            <div class="row">
                <div class="col-12">
                    <div class="tabs -bookmark-2 js-tabs">
                        <div class="tabs__controls d-flex items-center js-tabs-controls">

                            <div class="">
                                <a asp-action="index" asp-controller="home" class="tabs__button px-30 py-20 sm:px-20 sm:py-15 rounded-4 fw-600 text-white js-tabs-button is-tab-el-active" data-tab-target=".-tab-item-1">
                                    <i class="icon-home text-20 mr-10 sm:mr-5"></i>
                                    Home
                                </a>
                            </div>

                            <div class="">
                                <a asp-action="index" asp-controller="tour" class="tabs__button px-30 py-20 sm:px-20 sm:py-15 rounded-4 fw-600 text-white js-tabs-button " data-tab-target=".-tab-item-2">

                                    All Tours
                                </a>
                            </div>
                            <div class="">
                                <a asp-action="gallery" asp-controller="home" class="tabs__button px-30 py-20 sm:px-20 sm:py-15 rounded-4 fw-600 text-white js-tabs-button " data-tab-target=".-tab-item-2">
                                    Gallery
                                </a>
                            </div>
                            <div class="">
                                <a asp-action="about" asp-controller="home" class="tabs__button px-30 py-20 sm:px-20 sm:py-15 rounded-4 fw-600 text-white js-tabs-button " data-tab-target=".-tab-item-2">

                                    About Us
                                </a>
                            </div>
                            <div class="">
                                <a asp-action="review" asp-controller="home" class="tabs__button px-30 py-20 sm:px-20 sm:py-15 rounded-4 fw-600 text-white js-tabs-button " data-tab-target=".-tab-item-2">

                                    Review
                                </a>
                            </div>
                            <div class="">
                                <a asp-action="contact" asp-controller="home" class="tabs__button px-30 py-20 sm:px-20 sm:py-15 rounded-4 fw-600 text-white js-tabs-button " data-tab-target=".-tab-item-2">

                                    Contact
                                </a>
                            </div>
                        </div>

                        <div class="tabs__content js-tabs-content">

                            <div class="tabs__pane -tab-item-1 is-tab-el-active">
                            </div>

                            <div class="tabs__pane -tab-item-2 ">
                            </div>

                            <div class="tabs__pane -tab-item-3 ">
                            </div>

                            <div class="tabs__pane -tab-item-4 ">
                            </div>

                            <div class="tabs__pane -tab-item-5 ">
                            </div>

                            <div class="tabs__pane -tab-item-6 ">
                            </div>

                            <div class="tabs__pane -tab-item-7 ">
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="masthead__content">
            <div class="row y-gap-40">
                <div class="col-xl-5">
                    <h1 data-anim-child="slide-up delay-2" class="z-2 text-60 lg:text-40 md:text-30 text-white pt-80 xl:pt-0">
                        <span class="text-yellow-1">@Model.Masthead.TitleYellow</span><br>
                        @Model.Masthead.TitleWhite
                    </h1>

                    <p data-anim-child="slide-up delay-3" class="z-2 text-white mt-20">@Model.Masthead.Description</p>

                </div>

                <div class="col-xl-7">
                    <div class="masthead__images">
                        <div data-anim-child="slide-up delay-6"><img src="~/assets/img/masthead/2/@Model.Masthead.BigImageUrl" alt="image" class="js-mouse-move" data-move="30"></div>
                        <div data-anim-child="slide-up delay-7"><img src="~/assets/img/masthead/2/@Model.Masthead.SmallImageUrl1" alt="image" class="js-mouse-move" data-move="40"></div>
                        <div data-anim-child="slide-up delay-8"><img src="~/assets/img/masthead/2/@Model.Masthead.SmallImageUrl2" alt="image" class="js-mouse-move" data-move="50"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="layout-pt-md layout-pb-lg">
    <div data-anim-wrap class="container">
        <div class="tabs -pills-2 js-tabs">
            <div data-anim-child="slide-up delay-1" class="row y-gap-20 justify-between items-end">
                <div class="col-auto">
                    <div class="sectionTitle -md">
                        <h2 class="sectionTitle__title">Best Tours in Caucasus</h2>
                    </div>
                </div>
            </div>

            <div class="tabs__content pt-40 js-tabs-content">

                <div class="tabs__pane -tab-item-1 is-tab-el-active">
                    <div class="row y-gap-30">

                        @foreach (var bestTour in Model.Tours)
                        {
                            tourDelatCounter += 1;
                            <div data-anim-child="slide-left delay-@tourDelatCounter" class="col-xl-3 col-lg-3 col-sm-6">

                                <a asp-action="detail" asp-controller="tour" asp-route-id="@bestTour.Id" class="hotelsCard -type-1 ">
                                    <div class="hotelsCard__image">

                                        <div class="cardImage ratio ratio-1:1">
                                            <div class="cardImage__content">

                                                <img class="rounded-4 col-12" src="~/assets/img/tours/@bestTour.PosterImageUrl" alt="image">

                                            </div>

                                            <div class="cardImage__leftBadge">
                                                <div class="py-5 px-15 rounded-right-4 text-12 lh-16 fw-500 uppercase bg-dark-1 text-white">
                                                    Best Tours
                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                    <div class="hotelsCard__content mt-10">
                                        <h4 class="hotelsCard__title text-dark-1 text-18 lh-16 fw-500">
                                            <span>
                                                @foreach (var item in bestTour.TourCountries)
                                                {
                                                    @(Model.Countries.FirstOrDefault(x => x.Id == item.CountryId)?.CountryName + ",")
                                                } @bestTour.TourName,
                                                @foreach (var item in bestTour.TourCategories)
                                                {
                                                    @(Model.Categories.FirstOrDefault(x => x.Id == item.CategoryId)?.CategoryName + " ")
                                                } Tour
                                            </span>
                                        </h4>

                                        <p class="text-light-1 lh-14 text-14 mt-5">
                                            @foreach (var item in bestTour.TourCountries)
                                            {
                                                @(Model.Countries.FirstOrDefault(x => x.Id == item.CountryId)?.CountryName + " ")
                                            }
                                        </p>

                                        <div class="d-flex items-center mt-20">
                                            <div class="flex-center bg-blue-1 rounded-4 size-30 text-12 fw-600 text-white">@bestTour.Rating</div>
                                            <div class="text-14 text-dark-1 fw-500 ml-10">
                                                @if (bestTour.Rating >= 4)
                                                {
                                                    @("Exceptional")
                                                }
                                                else if (3 <= bestTour.Rating && bestTour.Rating < 4)
                                                {
                                                    @("Very Good")
                                                }
                                                else
                                                {
                                                    @("Good")
                                                }
                                            </div>
                                        </div>

                                        <div class="mt-5">
                                            <div class="fw-500">
                                                Starting from <span class="text-blue-1">US$@bestTour.Price</span>
                                            </div>
                                        </div>
                                    </div>
                                </a>

                            </div>

                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<section class="layout-pb-md">
    <div data-anim-wrap class="container">
        <div class="row y-gap-40 sm:y-gap-10 justify-between">

            @foreach (FeatureViewModel feature in Model.Features)
            {
                featureDelayCounter += 1;

                <div data-anim-child="slide-up delay-@featureDelayCounter" class="col-lg-4 col-sm-6">

                    <div class="featureIcon -type-1 -hover-shadow px-50 py-50 lg:px-24 lg:py-15">
                        <div class="d-flex justify-center">
                            <img src="~/assets/img/features/@feature.ImageUrl" alt="image" class="js-lazy">
                        </div>

                        <div class="text-center mt-30">
                            <h4 class="text-18 fw-500">@feature.Title</h4>
                            <p class="text-15 mt-10">@feature.Description</p>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</section>



<section class="layout-pt-lg layout-pb-lg bg-dark-3">
    <div class="container">
        <div class="row y-gap-60">
            <div class="col-xl-5 col-lg-6">
                <h2 class="text-30 text-white">@Model.Rating.Title1<br> @Model.Rating.Title2</h2>
                <p class="text-white mt-20">@Model.Rating.Description</p>

                <div class="row y-gap-30 text-white pt-60 lg:pt-40">
                    <div class="col-sm-5 col-6">
                        <div class="text-30 lh-15 fw-600">@Model.Rating.TotalGuestCount+</div>
                        <div class="lh-15">Total Guests</div>
                    </div>

                    <div class="col-sm-5 col-6">
                        <div class="text-30 lh-15 fw-600">@Model.Rating.OverallRating </div>
                        <div class="lh-15">Overall rating</div>

                        <div class="d-flex x-gap-5 items-center pt-10">

                            <div class="icon-star text-white text-10"></div>

                            <div class="icon-star text-white text-10"></div>

                            <div class="icon-star text-white text-10"></div>

                            <div class="icon-star text-white text-10"></div>

                            <div class="icon-star text-white text-10"></div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-4 offset-xl-2 col-lg-5 offset-lg-1 col-md-10">


                <div class="testimonials-slider-2 js-testimonials-slider-2">
                    <div class="swiper-wrapper">

                        @foreach (HomeReviewViewModel item in Model.homeReviews)
                        {
                            <div class="swiper-slide">
                                <div class="testimonials -type-1 bg-white rounded-4 pt-40 pb-30 px-40 shadow-2">
                                    <div class="">
                                        <h4 class="text-16 fw-500 text-blue-1 mb-20">@item.Title</h4>
                                        <p class="testimonials__text lh-18 fw-500 text-dark-1">&quot;@item.Description &quot;</p>

                                        <div class="pt-20 mt-28 border-top-light">
                                            <div class="row x-gap-20 y-gap-20 items-center">
                                                <div class="col-auto">
                                                    <img src="~/assets/img/avatars/@item.AvatarUrl" alt="image">
                                                </div>

                                                <div class="col-auto">
                                                    <div class="text-15 fw-500 lh-14">@item.Username</div>
                                                    <div class="text-14 lh-14 text-light-1 mt-5">@item.UserCountry</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>


                    <div class="d-flex x-gap-15 items-center justify-center pt-30">
                        <div class="col-auto">
                            <button class="d-flex items-center text-24 arrow-left-hover text-white js-prev">
                                <i class="icon icon-arrow-left"></i>
                            </button>
                        </div>

                        <div class="col-auto">
                            <div class="pagination -dots text-white-50 js-pagination"></div>
                        </div>

                        <div class="col-auto">
                            <button class="d-flex items-center text-24 arrow-right-hover text-white js-next">
                                <i class="icon icon-arrow-right"></i>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row justify-center text-center pt-60">
            <div class="col-auto">
                <div class="text-15 lh-1 text-white">Our Dear Partners </div>
            </div>
        </div>

        <div class="px-40 md:px-0">
            <div class="row y-gap-30 justify-between items-center pt-60 lg:pt-40">

                @foreach (var item in Model.Partners)
                {
                    <div class="col-md-auto col-sm-6">
                        <div class="d-flex justify-center">
                            <img src="~/assets/img/Partners/@item.ImageUrl" alt="image">
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
    
